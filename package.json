{
  "name": "tiny-url-service",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --inspect --env-file .env src/server.ts",
    "start": "node --env-file .env dist/src/server.js",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prepare": "husky",
    "migrate-dev": "npx prisma migrate dev --name init",
    "copy-static": "copyfiles -u 1 \"public/**/*\" dist/public"
  },
  "keywords": [],
  "author": "Lakovshchikov Ivan",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.1",
    "@vitest/eslint-plugin": "^1.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.28.0",
    "eslint-plugin-perfectionist": "^4.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "supertest": "^7.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^3.2.1"
  },
  "imports": {
    "#services": "./src/services/index.ts",
    "#utils": "./src/utils/index.ts",
    "#lib": "./src/lib/index.ts",
    "#models": "./src/models/index.ts",
    "#controllers": "./src/controllers/index.ts",
    "#controllers/*": "./src/controllers/*",
    "#middlewares": "./src/middlewares/index.ts",
    "#routes": "./src/routes/index.ts",
    "#routes/*": "./src/routes/*",
    "#repositories": "./src/repositories/index.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  }
}
